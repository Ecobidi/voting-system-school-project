<%-include ("partials/top") %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Voter Registration</h3>
    </div>

    <div class="col-12">
      <form action="/voters/new" method="POST">
        <div>
          <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= error_msg %></strong> 
            </div>
            <script>
              $(".alert").alert();
            </script>
          <% } %>
        </div>
        <div class="form-group col-6 offset-3 mt-4">
          <input class="form-control form-control-lg text-center" type="text" name="unique_voting_id" value="" placeholder="Matric Number or Reg Number.....">
          <button class="btn btn-primary mx-auto d-block mt-4" type="submit">Create Voter</button>
        </div> 
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>