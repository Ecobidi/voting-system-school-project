<%-include ("partials/top") %>
  <div class="row space">
    <div class="col-12">
      <form action="/voters/new" method="POST" enctype="multipart/form-data">
        <div>
          <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= error_msg %></strong> 
            </div>
            <script>
              $(".alert").alert();
            </script>
          <% } %>
        </div>
        
        <fieldset class="border p-2 rounded row text-white">
          <legend>Identification</legend>
          <div class="form-group col-md-4">
            <label>Surname: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="surname">
          </div>
          <div class="form-group col-md-4">
            <label>First Name: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="first_name">
          </div>
          <div class="form-group col-md-4">
            <label>Middle Name: (Not Compulsory)</label>
            <input required type="text" class="form-control" name="middle_name">
          </div>
        </fieldset>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Residential Address</legend>
          <div class="form-group col-md-4">
            <label>Home Address: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="resident_address">
          </div>

          <div class="form-group col-md-4">
            <label>City: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="resident_city">
          </div>

          <div class="form-group col-md-4">
            <label>State: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="resident_state">
          </div>
        </fieldset>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Place of Origin</legend>
          <div class="form-group col-md-4">
            <label>State of Origin: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="origin_state">
          </div>

          <div class="form-group col-md-4">
            <label>L.G.A.: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="origin_lga">
          </div>
        </fieldset>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Additional Information</legend>
          <div class="form-group col-md-4">
            <label>Mobile Phone: <strong class="text-danger">*</strong></label>
            <input class="form-control" type="text" name="phone">
          </div>
          <div class="form-group col-md-4">
            <label>Gender: <strong class="text-danger">*</strong></label>
            <select class="form-control" name="gender" required>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label>Photo: <strong class="text-danger">*</strong></label>
            <input class="form-control" type="file" name="photo" accept="image/jpg, image/png, image/jpeg">
          </div>
        </fieldset>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Voting Authentication Details</legend>
          <div class="form-group col-md-4">
            <label>Email (Unique Voting ID): <strong class="text-danger">*</strong></label>
            <input class="form-control" type="email" name="email">
          </div>
          <div class="form-group col-md-4">
            <label>Unique Voting Passphrase: <strong class="text-danger">*</strong></label>
            <input class="form-control" type="password" name="password">
          </div>
          <div class="form-group col-md-4">
            <label>Retype Unique Voting Passphrase: <strong class="text-danger">*</strong></label>
            <input class="form-control" type="password" name="retype_password">
          </div>
        </fieldset>

        <div class="form-group mt-4">
          <button class="btn btn-success form-control" type="submit">Create Voter</button>
        </div>
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>