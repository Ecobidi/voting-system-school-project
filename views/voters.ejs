<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Voters</h3>
      <div>
        <a href="/voters/new" class="btn btn-success">Add New Voter</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/voters?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by name...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Voters</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Photo</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Email (Unique Voting ID)</td>
            <td>Gender</td>
            <td>Telephone</td>
            <td>Residency</td>
            <td>Place of Origin</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% voters.forEach((m) => { %>
            <tr>
              <td>
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <td><small><%= m.surname %></small></td>
              <td><small><%= m.first_name + " " + m.middle_name %></small></td>
              <td><small><%= m.email %></small></td>
              <td><small><%= m.gender %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.resident_address + ", " + m.resident_city + ", " + m.resident_state %></small></td>
              <td><%= m.origin_lga + ", " + m.origin_state %></small></td>
              <td>
                <a href='<%= "/voters/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>