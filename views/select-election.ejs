<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-center align-items-center underline pb-2">
      <h3 class="title text-white text-center">Select Election</h3>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form method="GET" action="/candidates/new?">
        <div class="form-group">
          <select class="form-control text-center" name="election_id">
            <option>Choose Election</option>
            <% elections.forEach(e => { %>
              <option value='<%= e._id %>'><%= e.title + " (" + new Date(e.start_time).toDateString() + ")" %></option>
            <% }) %>
          </select>
        </div>  

        <div class="form-group col-4 offset-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-lg">Proceed</button>
        </div>
      </form>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>