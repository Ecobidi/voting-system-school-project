<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <form action="/candidates/new" method="POST" enctype="multipart/form-data">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <fieldset class="border p-2 rounded row text-white">
        <legend>Candidate Details</legend>
        
        <input name="election" value='<%= election._id %>' type="hidden">

        <div class="form-group col-md-6">
          <label>Position Contesting For: <strong class="text-danger">*</strong></label>
          <select required class="form-control" name="position" required>
            <option></option>
            <% election.positions.forEach(p => { %>
              <option value='<%= p.title %>'><%= p.title %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group col-md-4">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-4">
          <label>First Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="first_name">
        </div>
        <div class="form-group col-md-4">
          <label>Middle Name (Optional): <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="middle_name">
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Add New Candidate</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>