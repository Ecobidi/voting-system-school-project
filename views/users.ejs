<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Users</h3>
      <div>
        <a href="/users/new" class="btn btn-success">Create New User</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/users?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by name...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Users</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Profile Photo</td>
            <td>Username</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Role</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((m) => { %>
            <tr>
              <td>
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <td><%= m.username %></td>
              <td><%= m.surname %></td>
              <td><%= m.other_names %></td>
              <td><%= m.role %></td>
              <td>
                <a href=<%= "/users/remove/" + m._id %> class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>